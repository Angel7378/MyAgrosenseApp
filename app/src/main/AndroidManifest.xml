<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyApplication">

        <!-- LoginActivity with explicit android:exported attribute -->
        <activity android:name=".LoginActivity"
            android:exported="true"> <!-- or false based on your requirements -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ThingSpeakDataActivity with explicit android:exported attribute -->
        <activity android:name=".ThingSpeakDataActivity"
            android:exported="true"> <!-- or false based on your requirements -->
        </activity>

    </application>

</manifest>
