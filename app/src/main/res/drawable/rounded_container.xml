<!-- Sensor & Weather Data Card -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_container"
    android:orientation="vertical"
    android:padding="20dp"
    android:elevation="4dp"
    android:layout_marginBottom="24dp">

    <!-- Soil Moisture -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/soil"
            android:contentDescription="Soil Icon" />

        <TextView
            android:id="@+id/soilMoistureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil Moisture: 300 (Dry)"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Temperature -->
    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: 28Â°C"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Humidity -->
    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: 60%"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- pH Level -->
    <TextView
        android:id="@+id/phLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pH Level: 7.0"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- NPK Level -->
    <TextView
        android:id="@+id/npkLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NPK Level: 4.0"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Rain Status -->
    <TextView
        android:id="@+id/rainStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rain: No Rain"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Pump Status -->
    <TextView
        android:id="@+id/pumpStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pump: OFF (Rain)"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />
</LinearLayout>
